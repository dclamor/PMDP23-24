<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".U2.ut2a5PiedraPapelTijera">

    <TextView
        android:id="@+id/u2a5IdTvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="Tú"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/u2a5IdTvIa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:text="Máquina"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/u2a5IdTvPuntosUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/u2a5IdTvUser"
        app:layout_constraintStart_toStartOf="@+id/u2a5IdTvUser"
        app:layout_constraintTop_toBottomOf="@+id/u2a5IdTvUser" />

    <TextView
        android:id="@+id/u2a5IdTvPuntosIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/u2a5IdTvIa"
        app:layout_constraintStart_toStartOf="@+id/u2a5IdTvIa"
        app:layout_constraintTop_toBottomOf="@+id/u2a5IdTvIa" />

    <ImageButton
        android:id="@+id/ut2a5ImgPiedra"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:layout_constraintBottom_toBottomOf="@+id/ut2a5ImgTijera"
        app:layout_constraintEnd_toStartOf="@+id/ut2a5ImgTijera"
        app:layout_constraintTop_toTopOf="@+id/ut2a5ImgTijera" />

    <ImageButton
        android:id="@+id/ut2a5ImgTijera"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:src="?attr/actionModeCopyDrawable"
        app:layout_constraintEnd_toStartOf="@+id/u2a5IdTvIa"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/u2a5IdTvUser"
        app:layout_constraintTop_toBottomOf="@+id/u2a5IdTvPuntosUser" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCutDrawable"
        app:layout_constraintBottom_toBottomOf="@+id/ut2a5ImgTijera"
        app:layout_constraintStart_toEndOf="@+id/ut2a5ImgTijera"
        app:layout_constraintTop_toTopOf="@+id/ut2a5ImgTijera" />

</androidx.constraintlayout.widget.ConstraintLayout>